<% content_for :title do %>
  Manufacturers
<% end %>

<div class="page-header">
  <h1>Manufacturers</h1>
  <%= link_to new_manufacturer_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Manufacturer
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Name manufacturer</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @manufacturers.each do |manufacturer| %>
        <tr>
          <td><%= manufacturer.name_manufacturer %></td>
          <td>
            <%= link_to manufacturer, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_manufacturer_path(manufacturer), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to manufacturer, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>