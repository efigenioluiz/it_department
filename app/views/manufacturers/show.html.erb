<% content_for :title do %>
  Detalhes de Manufacturer
<% end %>

<div class="page-header">
  <h1>Detalhes de Manufacturer</h1>
  <div>
    <%= link_to edit_manufacturer_path(@manufacturer), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
