
<%= simple_form_for @manufacturer do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name_manufacturer %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Manufacturer' : 'Atualizar Manufacturer', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
