
<%= simple_form_for @brand do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name_brand %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Brand' : 'Atualizar Brand', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
