<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<div class="row align-items-center justify-content-center">
   <div class="col-md-3 col-md-offset-4">
      <section>
         <div class="panel panel-default top caja">
         <div class="panel-body">
            <!--h2 class="text-center">IT Department</!--h2>-->
            
            <form>
               <div class="input-group input-group-lg">
               <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-user" aria-hidden="true"></i></span>
                     <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "Email" } %>					
               </div>
               <div class="input-group input-group-lg">
               <span class="input-group-addon" id="sizing-addon1"><i class="fa fa-key" aria-hidden="true"></i></span>
               <%= f.input :password,
                     required: false,
                     input_html: { autocomplete: "current-password"} %>
                  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
               </div>
                  <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block'  %>
            </form>
         </div>
         </div>
      </section>
   </div>
</div>      
<% end %>