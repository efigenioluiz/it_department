<% content_for :title do %>
  Categories
<% end %>

<div class="page-header">
  <h1>Categories</h1>
  <%= link_to new_category_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Category
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>

          <td><%= category.brand.name_brand %></td>
          <td><%= category.manufacturer.name_manufacturer %></td>
          <td>
            <%= link_to category, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_category_path(category), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to category, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>