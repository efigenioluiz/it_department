<% content_for :title do %>
  Detalhes de Category
<% end %>

<div class="page-header">
  <h1>Detalhes de Category</h1>
  <div>
    <%= link_to edit_category_path(@category), class: 'btn btn-success' do %>
      <%= icon 'fas', 'edit' %>
      Editar
    <% end %>
    <%= link_to categories_path, class: 'btn btn-outline-secondary' do %>
      <%= icon 'fas', 'bars' %>
      Voltar
    <% end %>
  </div>
</div>

<dl class="dl-horizontal">
  <dt>Brand:</dt>
  <dd><%= @category.brand.name_brand %></dd>

  <dt>Manufacturer:</dt>
  <dd><%= @category.manufacturer.name_manufacturer %></dd>
</dl>
