
<%= simple_form_for @equipment do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description %>
    <%= f.input :active_board %>
    <%= f.input :serial_number %>
    <%= f.association :status, collection: Status.all.order(:current), label_method: :current, value_method: :id ,prompt: "Choose a Status" %>
    <%= f.association :category, collection: Category.all.order(:id), value_method: :id ,prompt: "Choose a Status" %>


  </div>
  
  <div class="form-actions">
    <%= f.button :submit, f.object.new_record? ? 'Criar Equipment' : 'Atualizar Equipment', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
