<% content_for :title do %>
  Equipment
<% end %>

<div class="page-header">
  <h1>Equipment</h1>
  <%= link_to new_equipment_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Equipment
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Description</th>
        <th>Active board</th>
        <th>Serial number</th>
        <th>Category</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @equipment.each do |equipment| %>
        <tr>
          <td><%= equipment.description %></td>
          <td><%= equipment.active_board %></td>
          <td><%= equipment.serial_number %></td>
          <td><%= equipment.category %></td>
          <td><%= equipment.status.current %></td>
          <td>
            <%= link_to equipment, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_equipment_path(equipment), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to equipment, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>