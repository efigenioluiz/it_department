<% content_for :title do %>
  Statuses
<% end %>

<div class="page-header">
  <h1>Statuses</h1>
  <%= link_to new_status_path, class: 'btn btn-primary' do %>
    <%= icon 'fas', 'plus' %>
    Novo Status
  <% end %>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Current</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @statuses.each do |status| %>
        <tr>
          <td><%= status.current %></td>
          <td>
            <%= link_to status, class: 'btn btn-info btn-sm' do %>
              <%= icon 'fas', 'eye', class: 'fa-fw' %>
            <% end %>
            <%= link_to edit_status_path(status), class: 'btn btn-success btn-sm' do %>
              <%= icon 'fas', 'edit', class: 'fa-fw' %>
            <% end %>
            <%= link_to status, method: :delete, data: { confirm: 'VocÃª tem certeza?' }, class: 'btn btn-danger btn-sm' do %>
              <%= icon 'fas', 'times', class: 'fa-fw' %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>